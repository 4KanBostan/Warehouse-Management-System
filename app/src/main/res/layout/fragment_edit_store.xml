<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.EditStoreFragment">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="18dp"
                android:text="Mağaza Ayrıntıları"
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/back_home_button"
                app:layout_constraintTop_toTopOf="@+id/back_home_button" />

            <ImageView
                android:id="@+id/back_home_button"
                android:layout_width="49dp"
                android:layout_height="43dp"
                android:src="@drawable/ic_baseline_arrow_back_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#EBF1F6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout2">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:src="@drawable/abstract_lettering_buy_now_with_shopping_elements" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="411dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:layout_constraintVertical_bias="0.32999998">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/et_storeBalance"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="44500"
                android:inputType="textPersonName"
                android:textColor="#274C77"
                android:textColorHint="#274C77"
                app:layout_constraintStart_toStartOf="@+id/textView23"
                app:layout_constraintTop_toBottomOf="@+id/textView23" />

            <ImageButton
                android:id="@+id/btn_update"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/ic_baseline_update_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Güncel Bakiye"
                android:textColor="#251B1B"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/et_StorePhone"
                app:layout_constraintTop_toBottomOf="@+id/et_StorePhone" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Mağaza Adı"
                android:textColor="#251B1B"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="İletişim Numarası"
                android:textColor="#251B1B"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/et_StoreAddress"
                app:layout_constraintTop_toBottomOf="@+id/et_StoreAddress" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Şehir"
                android:textColor="#251B1B"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/et_StoreNAme"
                app:layout_constraintTop_toBottomOf="@+id/et_StoreNAme" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Şube"
                android:textColor="#251B1B"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/et_StoreCity"
                app:layout_constraintTop_toBottomOf="@+id/et_StoreCity" />

            <EditText
                android:id="@+id/et_StoreNAme"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="LCW"
                android:inputType="textPersonName"
                android:textColor="#274C77"
                android:textColorHint="#274C77"
                app:layout_constraintStart_toStartOf="@+id/textView16"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <EditText
                android:id="@+id/et_StoreCity"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="İstanbul"
                android:inputType="textPersonName"
                android:textColor="#274C77"
                android:textColorHint="#274C77"
                app:layout_constraintStart_toStartOf="@+id/textView21"
                app:layout_constraintTop_toBottomOf="@+id/textView21" />

            <EditText
                android:id="@+id/et_StoreAddress"
                android:layout_width="342dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Küçükyalı"
                android:inputType="textPersonName"
                android:textColor="#274C77"
                android:textColorHint="#274C77"
                app:layout_constraintStart_toStartOf="@+id/textView22"
                app:layout_constraintTop_toBottomOf="@+id/textView22" />

            <EditText
                android:id="@+id/et_StorePhone"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="0555466454"
                android:textColor="#274C77"
                android:textColorHint="#274C77"
                app:layout_constraintStart_toStartOf="@+id/textView19"
                app:layout_constraintTop_toBottomOf="@+id/textView19" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Bakiye Ekle"
                android:textColor="#0C0B0B"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/et_storeBalance"
                app:layout_constraintTop_toBottomOf="@+id/et_storeBalance" />

            <EditText
                android:id="@+id/et_BakiyeEkle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Bakiye ekle"
                android:inputType="number"
                app:layout_constraintStart_toStartOf="@+id/textView20"
                app:layout_constraintTop_toBottomOf="@+id/textView20" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>